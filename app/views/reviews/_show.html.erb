<%
dimmed = question_updated_since? unless defined?(dimmed)
if dimmed
%>
<div style="opacity: 0.7">
<% end %>

<div style="width: 25%; float:left">
  <%= render "reviews/okay_state", okay: review.okay %>

  <table style="margin-top: 0; float: left">
    <tr><th>Difficulty:</th><td><meter value="<%=review.difficulty%>"></meter></td></tr>
    <tr><th>Awesomeness:</th><td><meter value="<%=review.awesomeness%>"></meter></td></tr>
    <tr><th>Gfoad:</th><td><meter value="<%=review.gfoad%>"></meter></td></tr>
  </table>
</div>

<div style="float:left; width: 70%">
  <em>
  <strong><%=review.user.nick %></strong>
  (vor <%= time_ago_in_words(review.updated_at) %>)
  </em>
  <br/>

  <%= render_tex review.comment %>
</div>

<hr class="clear"/>

<% if dimmed %>
</div>
<% end %>
